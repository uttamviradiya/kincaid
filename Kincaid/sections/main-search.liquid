<section class="main-search" id="main-search-{{ section.id }}">
  
  <div class="container">
    <div class="main-wrapper">
      <div class="main-filter-block-wrapper">
        {% render 'filter',results: search %}
      </div>
    <div class="product-grid-wrapper">
    {% paginate search.results by 5 %}
    <ul class="product-grid">
      {% for item in search.results %}
      <li class="product-card-li">
        {%- case item.object_type -%}
                      {%- when 'product' -%}
      	{% render 'product-card', product: item %}
      {% endcase %}
      </li>
      
      {% endfor %}
    </ul>
    {%- if paginate.pages > 1 -%}
    {% render 'pagination', paginate: paginate %}
    {%- endif -%}
    {% endpaginate %}
      </div>
    </div>
  </div>
</section>

