<style>
  .video-section .video-section-main video{width:100%;height:100%;max-height:460px;object-fit:cover;}
  .video-section .video-section-main video.vid-mob{display:none;}
  
  @media(max-width:1200px){
  	.video-section .video-section-main video{max-height:400px;}
  }
  @media(max-width:767px){
    .video-section .video-section-main video{max-height:325px}
    .video-section .video-section-main video.mobile-found{display:none;}
  	.video-section .video-section-main video.vid-mob{display:block;}
  }
 
</style>

{% if section.settings.video_desk != blank %}
<section class="video-section" id="video-section-{{ section.id }}">
  <div class="video-section-main">

    <video class="vid-desk {% if section.settings.video_mob != blank %}mobile-found {% endif %}" autoplay muted loop>
      <source src="{{ section.settings.video_desk }}" >
    </video>
     {% if section.settings.video_mob != blank %}
    <video class="vid-mob" autoplay muted loop>
      <source src="{{ section.settings.video_mob }}" >
    </video>
    {% endif %}
    
  </div>

</section>

{% endif %}

{% schema %}
  {
    "name": "Video Section",
    "settings": [
{
	"type":"text",
	"id":"video_desk",
	"label":"Video Url for Desktop",
	"info":"Upload Video in Files and Copy link and Paste it."

},
{
	"type":"text",
	"id":"video_mob",
	"label":"Video Url for Mobile",
	"info":"Upload Video in Files and Copy link and Paste it."

}
],
	"presets":[
	{
	"name":"Video Section"
}
]
  }
{% endschema %}

