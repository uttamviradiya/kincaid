
<style>
  #image-with-text-{{ section.id }} .image-with-text-main { background:{{ section.settings.back }} }
  {% if section.settings.img_left == true %}
  #image-with-text-{{ section.id }} .image-with-text-main .row {flex-direction: row-reverse; }
  {% endif %}
  {% if section.settings.img_hover == true %}
  #image-with-text-{{ section.id }} .image-with-text-main .img-block img { box-shadow:-25px 25px {{ section.settings.imgcolor1 }}; }
  #image-with-text-{{ section.id }} .image-with-text-main .img-block.img-hover1 img { box-shadow:-25px 25px {{ section.settings.imgcolor2 }}; }
  
  @media (max-width:575px){
  	#image-with-text-{{ section.id }} .image-with-text-main .img-block img { box-shadow:-15px 15px {{ section.settings.imgcolor1 }}; }
  #image-with-text-{{ section.id }} .image-with-text-main .img-block.img-hover1 img { box-shadow:-15px 15px {{ section.settings.imgcolor2 }}; }
  }
  {% endif %}
 	
  .section-content-{{ section.id }} .section-content { color:{{ section.settings.content_color }}; }
  
/*  heading  */
   {% if section.settings.head_color == true %}
  .section-content-{{ section.id }} .section-content .head { color:{{ section.settings.head_color1 }} }
  .section-content-{{ section.id }} .section-content .head.head-hover { color:{{ section.settings.head_color2 }} }
  {% endif %}
  
  {% if section.settings.head_back == true %}
  .section-content-{{ section.id }} .section-content .head { background:linear-gradient(180deg, #ffffff00 35%, {{ section.settings.head_back1 }} 35%);  }
  .section-content-{{ section.id }} .section-content .head.headback-hover { background:linear-gradient(180deg, #ffffff00 35%, {{ section.settings.head_back2 }} 35%);  }
  {% endif %}
  
  {% if section.settings.head_shadow == true %}
  .section-content-{{ section.id }} .section-content .head { text-shadow:4px 4px {{ section.settings.head_shadow1 }}  }
  .section-content-{{ section.id }} .section-content .head.headshadow-hover { text-shadow:4px 4px {{ section.settings.head_shadow2 }}   }
  @media (max-width:575px){
  	.section-content-{{ section.id }} .section-content .head { text-shadow:2px 2px {{ section.settings.head_shadow1 }}  }
  .section-content-{{ section.id }} .section-content .head.headshadow-hover { text-shadow:2px 2px {{ section.settings.head_shadow2 }}   }
  }
  
  {% endif %}

  
/* btns   */
   .section-content-{{ section.id }} .section-content .section-content-btns .btn { color:{{ section.settings.btn_text_color }} }
   .section-content-{{ section.id }} .section-content .section-content-btns .btn:hover { color:{{ section.settings.btn_hover_color }} }
  {% if section.settings.btn_back == true %}
  .section-content-{{ section.id }} .section-content .section-content-btns .btn { background: {{ section.settings.btn_back1 }}; }
  .section-content-{{ section.id }} .section-content .section-content-btns .btn.btnback-hover { background: {{ section.settings.btn_back2 }}; }
  {% endif %}
  
  {% if section.settings.btn_shadow == true %}
  .section-content-{{ section.id }} .section-content .section-content-btns .btn { box-shadow:8px 8px {{ section.settings.btn_shadow1 }}  }
  .section-content-{{ section.id }} .section-content .section-content-btns .btn.btnshadow-hover { box-shadow:8px 8px {{ section.settings.btn_shadow2 }}   }
  {% endif %}
  
/*  content design  */
  {% if section.settings.content_design == true %}
  #image-with-text-{{ section.id }} .image-with-text-main .image-with-text-content::before { background:{{ section.settings.content_design2 }};}
  #image-with-text-{{ section.id }} .image-with-text-main .image-with-text-content::after { border: 70px solid {{ section.settings.content_design1 }};border-top-color: transparent;border-left-color: transparent; }
  #image-with-text-{{ section.id }} .image-with-text-main .image-with-text-content-primary::before {background:{{ section.settings.content_design2 }};}
  
  #image-with-text-{{ section.id }} .image-with-text-main .image-with-text-content .image-with-text-content-inner::before {border:2px solid {{ section.settings.content_design2 }};}
  #image-with-text-{{ section.id }} .image-with-text-main .image-with-text-content .image-with-text-content-inner::after {border:2px solid {{ section.settings.content_design1 }};}
  
  @media (max-width:1440px){
  	#image-with-text-{{ section.id }} .image-with-text-main .image-with-text-content::after { border: 55px solid {{ section.settings.content_design1 }};border-top-color: transparent;border-left-color: transparent; }
  }
  
  @media (max-width:1200px){
  	#image-with-text-{{ section.id }} .image-with-text-main .image-with-text-content::after { border: 50px solid {{ section.settings.content_design1 }};border-top-color: transparent;border-left-color: transparent; }
  }
  {% endif %}
  
  .image-with-text-section .image-with-text-main .image-with-text-content , .image-with-text-section .image-with-text-main .image-with-text-content-primary { position:relative; height:100%; }

  .image-with-text-section .image-with-text-main .image-with-text-content .image-with-text-content-inner {background:{{ section.settings.content_back }};}

</style>


<section class="image-with-text-section mb50 section-content-{{ section.id }}" id="image-with-text-{{ section.id }}">
  <div class="container">
    {% if section.settings.heading != blank %}
    <div class="section-header">
      <h2>{{ section.settings.heading }}</h2>
    </div>
    {% endif %}
    <div class="image-with-text-main">
      <div class="row">
        <div class="col-lg-6">
          <div class="image-with-text-content">
            <div class="image-with-text-content-primary">
              <div class="image-with-text-content-inner">
                {% render 'section-content' %}
              </div>
            </div>
          </div>
        </div>
       
        <div class="col-lg-6">
          <figure class="img-block  {% if section.settings.img_hover == true %}img-block-hover{% endif %}" >
            <img src="{{ section.settings.img | img_url:"1500x1500" }}">
          </figure>
        </div>
        
      </div>
    </div>
  </div>
</section>

