<script>
  $(document).ready(function() {  

    {% if section.settings.img_hover == true %}
    setInterval(function() {
      $('.image-with-text-main .img-block').addClass("img-hover1");
      setTimeout(function(){
        $('.image-with-text-main .img-block').removeClass("img-hover1");
      },1000);
    },2000);
    {% endif %}
    
    //header
    {% if section.settings.head_color == true %}
    setInterval(function() {
      $('.section-content-{{ section.id }} .section-content .head').addClass("head-hover");
      setTimeout(function(){
        $('.section-content-{{ section.id }} .section-content .head').removeClass("head-hover");
      },1000);
    },2000);
    {% endif %}
    
    {% if section.settings.head_back == true %}
    setInterval(function() {
      $('.section-content-{{ section.id }} .section-content .head').addClass("headback-hover");
      setTimeout(function(){
        $('.section-content-{{ section.id }} .section-content .head').removeClass("headback-hover");
      },1250);
    },2500);
    {% endif %}
    
     {% if section.settings.head_shadow == true %}
    setInterval(function() {
      $('.section-content-{{ section.id }} .section-content .head').addClass("headshadow-hover");
      setTimeout(function(){
        $('.section-content-{{ section.id }} .section-content .head').removeClass("headshadow-hover");
      },1000);
    },2000);
    {% endif %}
    
    //btns
    {% if section.settings.btn_back == true %}
    setInterval(function() {
      $('.section-content-{{ section.id }} .section-content-btns .btn').addClass("btnback-hover");
      setTimeout(function(){
        $('.section-content-{{ section.id }} .section-content-btns .btn').removeClass("btnback-hover");
      },1250);
    },2500);
    {% endif %}
    
    {% if section.settings.btn_shadow == true %}
    setInterval(function() {
      $('.section-content-{{ section.id }} .section-content-btns .btn').addClass("btnshadow-hover");
      setTimeout(function(){
        $('.section-content-{{ section.id }} .section-content-btns .btn').removeClass("btnshadow-hover");
      },1000);
    },2000);
    {% endif %}
    
    
  });
</script>



